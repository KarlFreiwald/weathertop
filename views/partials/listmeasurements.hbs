<div class="border p-2 my-2">
    <div class="row">
        <div class="col">
            <div class="card text-white bg-dark mb-3 h-100" style="max-width: 18rem;">
                <div class="card-body">
                    <h4 class="card-title">{{StationInfo.location}}</h4>
                    <p class="card-text">
                        Lat: {{StationInfo.latitude}}<br>
                        Lon: {{StationInfo.longitude}}</p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-dark mb-3 h-100" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        Wetter
                        <i class={{weather_icon}}></i>
                    </h5>
                    {{#if mostRecentWeather}}
                        <p class="card-text">{{mostRecentWeather}}</p>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-dark mb-3 h-100" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        Temperatur
                        <i class={{temperature_trend_icon}}></i>
                    </h5>
                    {{#if mostRecentMeasurement}}
                        <p class="card-text">{{mostRecentMeasurement.temperature}} °C</p>
                        <p class="card-text">
                            Max: {{maxMin.max_temperature}} °C<br />
                            Min: {{maxMin.min_temperature}} °C
                        </p>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-dark mb-3 h-100" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        Wind
                        <i class={{wind_trend_icon}}></i>
                    </h5>
                    {{#if mostRecentMeasurement}}
                        <p class="card-text">
                            {{mostRecentMeasurement.wind}} bft<br />
                            {{mostRecentWindDirection}}
                        </p>
                        <p class="card-text">
                            Max: {{maxMin.max_wind}} bft<br />
                            Min: {{maxMin.min_wind}} bft
                        </p>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-dark mb-3 h-100" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        Luftdruck
                        <i class={{airpressure_trend_icon}}></i>
                    </h5>
                    {{#if mostRecentMeasurement}}
                        <p class="card-text">{{mostRecentMeasurement.airpressure}} hpa</p>
                        <p class="card-text">
                            Max: {{maxMin.max_airpressure}} hpa<br />
                            Min: {{maxMin.min_airpressure}} hpa
                        </p>
                    {{/if}}
                </div>
            </div>
        </div>

    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Zeitpunkt</th>
        <th scope="col">Wetter</th>
        <th scope="col">Temperatur</th>
        <th scope="col">Wind</th>
        <th scope="col">Luftdruck</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each allMeasurements}}
        <tr>
            <td>{{time_of_record}}</td>
            <td>{{weather}}</td>
            <td>{{temperature}}</td>
            <td>{{wind}}</td>
            <td>{{airpressure}}</td>
            <td>
                <a class="btn btn-link" href="/measurements/{{station_id}}/deletemeasurement/{{measurement_id}}" role="button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
